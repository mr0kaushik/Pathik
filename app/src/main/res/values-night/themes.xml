<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pathik" parent="Base.Theme.Pathik">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bunker</item>
        <item name="colorPrimaryVariant">@color/bunker_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_98</item>
        <item name="colorSecondaryVariant">@color/gray_78</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorOnBackground">@color/gray_400</item>
        <item name="colorOnSurface">@color/gray_400</item>
        <item name="colorOnPrimarySurface">@color/white</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.Pathik.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>