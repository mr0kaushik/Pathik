<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.Pathik" parent="Base.Theme.Pathik" />


    <style name="SplashTheme" parent="Theme.Pathik">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="Theme.Pathik.MainActivity" parent="Base.Theme.Pathik">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.Pathik.AuthActivity" parent="Base.Theme.Pathik">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Pathik.SettingsActivity" parent="Base.Theme.Pathik">

        <item name="preferenceCategoryTitleTextAppearance">@style/TextAppearance.Pathik.Subtitle1
        </item>
        <item name="colorAccent">@color/white_smoke</item>
        <item name="subtitleTextColor">@color/gray_78</item>
        <item name="android:textColorSecondary">@color/gray_78</item>
        <item name="android:textAppearanceLarge">
            @style/TextAppearance.Pathik.Preference.Title.Light
        </item>
        <item name="android:textAppearanceSmall">
            @style/TextAppearance.Pathik.Preference.Summary.Light
        </item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Pathik.Body1</item>
    </style>

    <style name="Base.Theme.Pathik" parent="Base.Theme.MaterialThemeBuilder">
        <item name="colorPrimary">@color/bunker</item>
        <item name="colorPrimaryVariant">@color/bunker_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>


        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white_smoke</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">@color/black_ebony</item>
        <item name="colorAccent">@color/black_ebony</item>
        <item name="colorOnSurface">@color/white_smoke</item>


        <!-- Customize your theme here. -->
        <item name="navigationIconTint">@color/white_smoke</item>

        <item name="colorBackgroundFloating">@color/black_ebony</item>
        <item name="android:colorBackgroundFloating" tools:targetApi="23">@color/black_ebony</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Pathik.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Pathik.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Pathik.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Pathik.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Pathik.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Pathik.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Pathik.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Pathik.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Pathik.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Pathik.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Pathik.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Pathik.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Pathik.Overline</item>


        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Pathik.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Pathik.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Pathik.LargeComponent
        </item>


        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/MAlertDialogStyle</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.Pathik.CircularProgressIndicator
        </item>
        <item name="linearProgressIndicatorStyle">@style/Widget.Pathik.LinearProgressIndicator
        </item>

        <item name="snackbarStyle">@style/Widget.Pathik.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.Pathik.SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/Widget.Pathik.TextView</item>


        <item name="android:windowAnimationStyle">@style/ActivityTransitionAnimation</item>

        <!--        </item>-->
        <!--        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>-->
    </style>

    <style name="Widget.Pathik.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Pathik.CircularProgressIndicator
        </item>
    </style>

    <style name="Widget.Pathik.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Pathik.LinearProgressIndicator
        </item>
    </style>

    <style name="ThemeOverlay.Pathik.LinearProgressIndicator" parent="">
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="trackColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Pathik.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/white_old_lace</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/bunker</item>
    </style>

    <style name="Widget.Pathik.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Pathik.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.Pathik.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/white_old_lace</item>
    </style>

    <style name="Widget.Pathik.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="colorSurface">@color/white_smoke</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>


    <style name="ThemeOverlay.Pathik.Snackbar" parent="">
        <item name="colorOnSurface">@color/black_ebony</item>
    </style>

    <style name="Theme.Pathik.Preferences">
        <item name="preferenceCategoryTitleTextAppearance">@style/TextAppearance.Pathik.Subtitle1
        </item>
        <item name="colorAccent">@color/white_smoke</item>
        <item name="subtitleTextColor">@color/gray_78</item>
        <item name="android:textColorSecondary">@color/gray_78</item>
        <item name="android:textAppearanceLarge">
            @style/TextAppearance.Pathik.Preference.Title.Light
        </item>
        <item name="android:textAppearanceSmall">
            @style/TextAppearance.Pathik.Preference.Summary.Light
        </item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Pathik.Body1</item>

    </style>

    <style name="ActivityTransitionAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/nav_default_exit_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/nav_default_pop_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/nav_default_pop_exit_anim</item>
    </style>

    <!--    <style name="ProgressBarTheme" parent="Theme.Pathik">-->
    <!--        <item name="colorAccent">@color/white_old_lace</item>-->
    <!--    </style>-->

    <style name="Widget.Pathik.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Pathik.NavigationView</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="itemIconSize">24sp</item>
        <item name="itemTextAppearance">@style/TextAppearance.Pathik.Subtitle1</item>
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
    </style>

    <style name="ThemeOverlay.Pathik.NavigationView" parent="">
        <item name="colorPrimary">@color/black_ebony</item>
        <item name="colorSurface">@color/white_smoke</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Pathik.Body2.NavItem</item>
    </style>

</resources>