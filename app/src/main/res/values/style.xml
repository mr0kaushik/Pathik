    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white_smoke</item>
    </style>


    <style name="MAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/black_ebony</item>
        <item name="colorSurface">@color/black_ebony</item>
        <item name="colorOnSurface">@color/white_smoke</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="buttonBarButtonStyle">@style/Style.Pathik.Button.Text</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Pathik.MediumComponent.Dialog</item>
        <item name="android:background">@color/black_ebony</item>
        <item name="android:colorAccent">@color/white_old_lace</item>
    </style>

    <style name="Style.Pathik.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Style.Pathik.EditText" parent="">
        <item name="maxLines">1</item>
        <item name="android:textColorHighlight">@color/gray_98</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textAppearance">@style/TextAppearance.Pathik.Body1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="android:paddingEnd">4dp</item>
    </style>


    <style name="StyleDrawerMenuItem" parent="">
        <item name="itemTextAppearance">@style/TextAppearance.Pathik.Subtitle1</item>
        <item name="android:textSize">18sp</item>
        <item name="itemMaxLines">1</item>
        <item name="android:letterSpacing">1.3</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="colorSurface">@color/colorError</item>
        <!--        <item name="itemTextColor">@color/drawer_menu_item_state</item>-->
    </style>

    <style name="Style.Pathik.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Pathik.Button</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>

</resources>