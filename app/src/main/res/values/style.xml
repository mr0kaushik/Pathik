<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="SplashTheme" parent="Theme.Pathik">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>


    <style name="Style.Pathik.Primary.Button.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="strokeWidth">0dp</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="android:gravity">center</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <!--        <item name="rippleColor"></item>-->
    </style>

    <style name="Style.Pathik.Primary.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Pathik.SmallComponent.Rounded</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/primary_button_state</item>
        <item name="android:gravity">center</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Pathik.Headline6</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="rippleColor">@color/gray_98</item>
    </style>

    <style name="Style.Pathik.Secondary.Button" parent="Style.Pathik.Primary.Button">
        <item name="android:textColor">@color/gray_98</item>
        <item name="rippleColor">@color/gray_600</item>
        <item name="backgroundTint">@color/gray_78</item>
    </style>


    <style name="MAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Pathik.MediumComponent.Dialog</item>
        <item name="android:background">@color/black_ebony</item>
        <item name="android:colorAccent">@color/white_old_lace</item>
    </style>

    <style name="Style.Pathik.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Style.Pathik.EditText" parent="">
        <item name="maxLines">1</item>
        <item name="android:textColorHighlight">@color/gray_98</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textAppearance">@style/TextAppearance.Pathik.Body1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="android:paddingEnd">4dp</item>
    </style>


    <style name="StyleDrawerMenuItem" parent="">
        <item name="itemTextAppearance">@style/TextAppearance.Pathik.Subtitle1</item>
        <item name="android:textSize">16sp</item>
        <item name="itemMaxLines">1</item>
        <item name="android:letterSpacing">1.3</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="itemTextColor">@color/drawer_menu_item_state</item>
    </style>


</resources>