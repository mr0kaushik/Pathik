<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/black_ebony"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="8dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWalletLogo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/paytm" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWalletTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:textAppearance="@style/TextAppearance.Pathik.Body1"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivWalletLogo"
        app:layout_constraintEnd_toStartOf="@+id/tvAction"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivWalletLogo"
        app:layout_constraintTop_toTopOf="@+id/ivWalletLogo"
        tools:text="PayTM" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/royalBlue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivWalletLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvWalletTitle"
        app:layout_constraintTop_toTopOf="@+id/ivWalletLogo"
        tools:text="LINK" />

</androidx.constraintlayout.widget.ConstraintLayout>
